{
  "name": "screenshot-service",
  "version": "1.0.0",
  "description": "Screenshot webpages via Rest API and sends the links to your mail",
  "repository": {
    "type": "git",
    "url": "https://github.com/tnkemdilim/screenshot-service"
  },
  "author": "Tochukwu Nkemdilim",
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "build": "tsc && npm run lint",
    "postinstall": "if [[ ${NPM_POST_INSTALL} != \"0\" ]]; then npm run build; fi",
    "start": "node dist/server.js",
    "watch": "tsc -w",
    "start:nodemon": "npm run build && npm run watch:nodemon",
    "watch:nodemon": "nodemon dist/server.js",
    "watch:test": "npm run test -- --watchAll",
    "start:concurrent": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch\" \"PUPPETEER_PRODUCT=chrome npm run watch:nodemon\"",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "load-test": "k6 run --vus 1000 --iterations 10000 ./test/load-testing/index.ts",
    "coverage": "npm run test && cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "@sideway/address": "^4.1.0",
    "async-mutex": "^0.2.6",
    "body-parser": "^1.19.0",
    "bull": "^3.20.0",
    "cloudinary": "^1.23.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "ioredis": "^4.19.4",
    "nodemailer": "^6.4.17",
    "prom-client": "^13.0.0",
    "typescript-ioc": "^3.2.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/bull": "^3.14.4",
    "@types/chai": "^4.2.3",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.9",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/ioredis": "^4.17.9",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.7.8",
    "@types/nodemailer": "^6.4.0",
    "@types/puppeteer-core": "^2.0.0",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.44",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^6.4.0",
    "ioredis-mock": "^5.2.0",
    "jest": "^26.6.3",
    "kill-port": "^1.6.1",
    "nodemon": "^1.19.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "optionalDependencies": {
    "puppeteer": "^5.5.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "engineStrict": true
}